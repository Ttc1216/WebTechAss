                gap: 15px;
            }

                .container3 form .row .col {
                    flex: 1 1 250px;
                }

                    .container3 form .row .col .title {
                        font-size: 20px;
                        color: #333;
                        padding-bottom: 5px;
                        text-transform: uppercase;
                    }

                    .container3 form .row .col .inputBox {
                        margin: 15px 0;
                    }

                        .container3 form .row .col .inputBox span {
                            margin-bottom: 10px;
                            display: block;
                        }

                        .container3 form .row .col .inputBox input {
