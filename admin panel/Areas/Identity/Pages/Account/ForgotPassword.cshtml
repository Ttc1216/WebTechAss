@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fce4ec; /* Sakura pink */
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #ba68c8; /* Purple */
            text-align: center;
            margin-bottom: 20px;
        }

        h2 {
            color: #ba68c8; /* Purple */
            text-align: center;
            margin-bottom: 10px;
        }

        hr {
            border-color: #ba68c8; /* Purple */
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            justify-content: center;
        }

        .col-md-4 {
            width: 400px; /* Updated width */
        }

        form {
            padding: 20px;
            background-color: #f3e5f5; /* Purple */
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-floating {
            position: relative;
            margin-bottom: 10px;
        }

        .form-control {
            width: 100%;
            height: 40px;
            padding: 10px;
            font-size: 16px;
            border: none;
            border-bottom: 2px solid #ba68c8; /* Purple */
            background-color: #fff;
            outline: none;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #f48fb1; /* Lighter Sakura pink */
            }

        .text-danger {
            color: #f44336; /* Red */
        }

        .btn-primary {
            width: 100%;
            height: 40px;
            background-color: #f8bbd0; /* Light Sakura pink */
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #f06292; /* Dark Sakura pink */
            }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <h2>Enter your email.</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
