@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #0d47a1;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 400px;
            padding: 20px;
            background-color: #f0f8ff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

            .form-group input {
                width: 100%;
                height: 40px;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-bottom: 2px solid #007bff;
                background-color: #fff;
                outline: none;
                transition: border-color 0.3s;
            }

                .form-group input:focus {
                    border-color: #0056b3;
                }

        .checkbox {
            margin-bottom: 20px;
        }

        button {
            width: 100%;
            height: 40px;
            background-color: #4caf50; /* Updated color */
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049; /* Updated hover color */
            }

        .links {
            margin-top: 20px;
            text-align: center;
        }

            .links a {
                margin-right: 10px;
                color: #007bff;
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="Input.Email" class="form-control" id="email" autocomplete="username" aria-required="true" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" aria-required="true" required>
            </div>
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            <div class="links">
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </div>
        </form>
    </div>
</body>
</html>