@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #fce4ec; /* Sakura pink */
            font-family: Arial, sans-serif;
        }

        .container {
            width: 400px; /* Updated width */
            padding: 20px;
            background-color: #f3e5f5; /* Purple */
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin: auto; /* Center the form horizontally and vertically */
        }

        h1 {
            color: #ba68c8; /* Purple */
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group input {
            width: 100%;
            height: 40px;
            padding: 10px;
            font-size: 16px;
            border: none;
            border-bottom: 2px solid #ba68c8; /* Purple */
            background-color: #fff;
            outline: none;
            transition: border-color 0.3s;
        }

            .form-group input:focus {
                border-color: #f48fb1; /* Lighter Sakura pink */
            }

        button {
            width: 100%;
            height: 40px;
            background-color: #f8bbd0; /* Light Sakura pink */
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #f06292; /* Dark Sakura pink */
            }

        .links {
            margin-top: 20px;
            text-align: center;
        }

            .links a {
                display: block; /* Place each link in a separate row */
                margin-bottom: 10px; /* Add some bottom margin for spacing */
                color: #ba68c8; /* Purple */
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="Input.Email" class="form-control" id="email" autocomplete="username" aria-required="true" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" aria-required="true" required>
            </div>
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            <div class="links">
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
              
            </div>
        </form>
    </div>
</body>
</html>
